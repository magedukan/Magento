<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <title>Redirect to mobilPay Page</title>
    </head>
    <body>
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">Asteptati... Va redirectionam la mobilPay</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
            <block class="Mobilpay\Credit\Block\Redirect" name="redirect-Block" template="redirect.phtml"/>
        </referenceContainer>
    </body>
</page>